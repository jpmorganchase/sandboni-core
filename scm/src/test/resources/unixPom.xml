<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>com.jpmchase.awm.doctracktool</groupId>
  <artifactId>dtt</artifactId>
  <version>0.0.93-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>dtt</name>

    <parent>
        <artifactId>te-core</artifactId>
        <groupId>com.jpmc.awm.te</groupId>
        <version>1.0.3</version>
    </parent>

  <scm>
    <connection>scm:git:https://bitbucketdc-cluster06.jpmchase.net/scm/doctracktool/dtt_web.git</connection>
    <developerConnection>scm:git:https://bitbucketdc-cluster06.jpmchase.net/scm/doctracktool/dtt_web.git</developerConnection>
    <url>https://bitbucketdc-cluster06.jpmchase.net/projects/DOCTRACKTOOL/repos/dtt_web/browse</url>
    <tag>HEAD</tag>
  </scm>

  <distributionManagement>    
   	<repository>
		<id>DOCTRACKTOOL</id>
		<name>DTT Artifact Repository</name>
		<url>https://repo.jpmchase.net/maven/content/repositories/DOCTRACKTOOL</url>
	</repository>
	<snapshotRepository>
		<id>DOCTRACKTOOL-SNAPSHOT</id>
		<name>DTT SNAPSHOT Artifact Repository</name>
		<url>https://repo.jpmchase.net/maven/content/repositories/DOCTRACKTOOL-SNAPSHOT</url>
	</snapshotRepository>		
  </distributionManagement>
  <properties>  	
  	<yarn-registry>https://frs-art.jpmchase.net/artifactory/api/npm/jpmc-public-npm</yarn-registry>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.build.timestamp.format>yyyy.MM.dd-HH.mm.ss</maven.build.timestamp.format>
    <project.build.timestamp>${maven.build.timestamp}</project.build.timestamp>
    <java.version>1.8</java.version>
     <hibernate.version>5.2.10.Final</hibernate.version>
      <sonar.coverage.exclusions>
          **/rest/impl/*,
          **/repository/documents/*,
          **/cyberark/*,
          **/doctracktool/ApplicationConfiguration*,
          **/doctracktool/ImpersonationFilter*,
          **/model/**,
          **/doctracktool/base/common**,
          **doctracktool/utility**,
          **/doctracktool/base/log**,
          **/doctracktool/repository**
      </sonar.coverage.exclusions>
      <jacoco.skip.instrument>false</jacoco.skip.instrument>
  </properties>
    
  <prerequisites>
    <maven>3.2.1</maven>
  </prerequisites>

  <modules>
    <!--module>dtt-parent</module-->
    <module>dtt-app</module>
    <module>dtt-rest</module>
    <module>dtt-web</module>
	<module>dtt-model</module>
    <!--module>dtt-config</module-->
    <module>dtt-base</module>
    <module>dtt-service</module>
    <module>dtt-repository</module>
    <module>dtt-ext-webservices</module>
	 <module>dtt-pentaho</module>
	
  </modules>


<dependencies>

    <dependency>
        <groupId>com.jpmc.awm.te</groupId>
        <artifactId>te-core-common</artifactId>
        <version>1.0.3</version>
    </dependency>

<dependency>
      <groupId>com.jpmorgan.moneta.boot</groupId>
      <artifactId>moneta-boot-starter</artifactId>
    </dependency>

    <dependency>
        <groupId>com.jpmorgan.moneta.boot</groupId>
        <artifactId>moneta-boot-starter-jersey</artifactId>
    </dependency>

    <dependency>
      <groupId>com.jpmorgan.moneta.boot</groupId>
      <artifactId>moneta-boot-starter-jersey-client</artifactId>
    </dependency>
    <dependency>
        <groupId>com.jpmorgan.moneta.boot</groupId>
        <artifactId>moneta-boot-starter-janus</artifactId>
    </dependency>
    <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-data-jpa</artifactId>
        <exclusions>
            <exclusion>
                <groupId>dom4j</groupId>
                <artifactId>dom4j</artifactId>
            </exclusion>
        </exclusions>
    </dependency>

    <dependency>
        <groupId>org.dom4j</groupId>
        <artifactId>dom4j</artifactId>
        <version>2.1.1</version>
    </dependency>

    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-aop</artifactId>
    </dependency>

    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-cache</artifactId>
    </dependency>
    
    <dependency>
    	<groupId>org.easymock</groupId>
    	<artifactId>easymock</artifactId>
        <version>3.4</version>
    	<scope>test</scope>
    </dependency>
   	<dependency>
		<groupId>org.powermock</groupId>
		<artifactId>powermock-api-easymock</artifactId>
		<scope>test</scope>
	</dependency>
	<dependency>
		<groupId>org.powermock</groupId>
		<artifactId>powermock-module-junit4</artifactId>
		<version>1.6.6</version>
		<scope>test</scope>
	</dependency>
   	<dependency>
   		<groupId>org.springframework.security</groupId>
   		<artifactId>spring-security-test</artifactId>
   		<scope>test</scope>
   	</dependency>
    <dependency>
        <groupId>com.mikesamuel</groupId>
        <artifactId>json-sanitizer</artifactId>
        <version>1.2.0</version>
    </dependency>
    <dependency>
        <groupId>org.drools</groupId>
        <artifactId>drools-compiler</artifactId>
        <version>6.5.0.Final</version>
        <exclusions>
            <exclusion>
                <artifactId>mvel2</artifactId>
                <groupId>org.mvel</groupId>
            </exclusion>
        </exclusions>
    </dependency>
    <dependency>
        <groupId>org.projectlombok</groupId>
        <artifactId>lombok</artifactId>
    </dependency>
    <dependency>
        <groupId>org.mockito</groupId>
        <artifactId>mockito-core</artifactId>
    </dependency>
    <dependency>
        <groupId>org.jacoco</groupId>
        <artifactId>org.jacoco.agent</artifactId>
        <version>0.8.3</version>
        <classifier>runtime</classifier>
        <scope>test</scope>
    </dependency>
</dependencies>


  <build>
    <plugins>
      <!-- Skip installation of build-only POM -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <configuration>
          <skip>false</skip>
        </configuration>
      </plugin>

      <!-- Skip deployment of build-only POM -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
      </plugin>

        <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.8.0</version>
        </plugin>

      <plugin>
        <groupId>external.atlassian.jgitflow</groupId>
        <artifactId>jgitflow-maven-plugin</artifactId>
        <configuration>
          <autoVersionSubmodules>true</autoVersionSubmodules>
          <enableSshAgent>true</enableSshAgent>
          <updateDependencies>false</updateDependencies>
        </configuration>
      </plugin>
        <plugin>
            <groupId>org.jacoco</groupId>
            <artifactId>jacoco-maven-plugin</artifactId>
            <version>0.8.3</version>
            <executions>
                <execution>
                    <id>default-instrument</id>
                    <goals>
                        <goal>instrument</goal>
                    </goals>
                    <configuration>
                        <skip>${jacoco.skip.instrument}</skip>
                    </configuration>
                </execution>
                <execution>
                    <id>default-restore-instrumented-classes</id>
                    <goals>
                        <goal>restore-instrumented-classes</goal>
                    </goals>
                    <configuration>
                        <skip>${jacoco.skip.instrument}</skip>
                    </configuration>
                </execution>
                <execution>
                    <id>report</id>
                    <phase>prepare-package</phase>
                    <goals>
                        <goal>report</goal>
                    </goals>
                    <configuration>
                        <skip>${jacoco.skip.instrument}</skip>
                        <outputDirectory>target/coverage-report</outputDirectory>
                        <dataFile>${project.build.directory}/jacoco.exec</dataFile>
                    </configuration>
                </execution>
                <execution>
                    <id>jacoco-site</id>
                    <phase>verify</phase>
                    <goals>
                        <goal>report</goal>
                    </goals>
                </execution>
        </executions>
            <configuration>
                <propertyName>jacoco.agent.argLine</propertyName>
                <skip>false</skip>
                <append>true</append>
                <includes>
                    true
                </includes>
            </configuration>
        </plugin>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
                <systemPropertyVariables>
                    <jacoco-agent.destfile>target/jacoco.exec</jacoco-agent.destfile>
                </systemPropertyVariables>
            </configuration>
        </plugin>
        <plugin>
            <groupId>com.jpmorgan.cib.core.sandboni</groupId>
            <artifactId>sandboni-maven</artifactId>
            <version>1.13.86</version>
            <executions>
                <execution>
                    <goals>
                        <goal>sandboni</goal>
                    </goals>
                </execution>
            </executions>
            <configuration>
                <sealId>89713</sealId>
            </configuration>
        </plugin>
    </plugins>
  </build>

	<dependencyManagement>
	 <dependencies>	 
     
      <dependency>
		<groupId>org.powermock</groupId>
		<artifactId>powermock-api-easymock</artifactId>
		<version>1.6.6</version>		
	   </dependency>
         <dependency>
             <groupId>com.thoughtworks.xstream</groupId>
             <artifactId>xstream</artifactId>
             <version>1.4.11.1</version>
         </dependency>
       </dependencies>
	</dependencyManagement>
</project>
